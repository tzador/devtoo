{
  "name": "DevToo",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Find related content on Dev.too",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"]
}
